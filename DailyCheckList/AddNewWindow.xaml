<Window x:Class="DailyCheckList.AddNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyCheckList"
        mc:Ignorable="d"
        Title="Add New Task" Height="150"  Width="300" Icon="img\AddIcon.png"
        WindowStyle="None">
    <StackPanel Background="Black">
        <TextBlock Text="Task Name"/>
        <TextBox x:Name="TaskNameIn" FontSize="32" FontFamily="Segoe UI">
        </TextBox>
        <Grid>
            <Button Click="OK_Click" Grid.Row="0" Grid.Column="0" Margin="30,0,204.6,0.4">OK</Button>
            <Button Click="Close_Click" HorizontalAlignment="Right" Grid.Row="0" Margin="0,0,50.6,0.4" Width="98">Close</Button>
        </Grid>
    </StackPanel>
</Window>
